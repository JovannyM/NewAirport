<UserControl x:Class="NewAirport.VVM.Editor.Libruary.LibraryEditorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NewAirport.VVM.Editor.Library"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="1200"

             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="{materialDesign:MaterialDesignFont}">

    <UserControl.DataContext>
        <local:LibraryEditorVM />
    </UserControl.DataContext>


    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <materialDesign:Card
            Grid.Row="0"
            Grid.Column="0"
            Margin="0 0 5 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                    Text="Изменение библиотеки аэропортов"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    FontWeight="DemiBold"
                    Margin="10 0 0 5"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="СОЗДАНИЕ"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10 0 0 5"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="Введите название"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="15,0,15,0"
                    materialDesign:HintAssist.Hint="Аэропорт [Город]"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    VerticalAlignment="Center" />
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="15 10 15 10"
                    Command="{Binding CheckAndSave}"
                    Content="Добавить новый аэропорт" Background="White" />


                <!-- Editing -->

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    FontWeight="DemiBold"
                    Margin="0 0 0 5"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="УДАЛЕНИЕ"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0 0 0 5"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="Выберите аэропорт"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
                <ComboBox
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="15 0 15 0"
                    materialDesign:HintAssist.Hint="Аэропорт"
                    materialDesign:HintAssist.HintOpacity=".26"
                    IsEditable="True"
                    DisplayMemberPath="Id" />
                <Button
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="15 10 15 10"
                    Command="{Binding CheckAndSave}"
                    Content="Исключить аэропорт" Background="White" BorderBrush="#FFFF4600" />
            </Grid>
        </materialDesign:Card>

        <materialDesign:Card
            Grid.Row="0"
            Grid.Column="1"
            Margin="5 0 0 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                    Text="Изменение библиотеки самолётов"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    FontWeight="DemiBold"
                    Margin="10 0 0 5"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="СОЗДАНИЕ"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10 0 0 5"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="Введите название"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="15,0,15,0"
                    materialDesign:HintAssist.Hint="Модель и Борт№"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    VerticalAlignment="Center" />
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="15 10 15 10"
                    Command="{Binding CheckAndSave}"
                    Content="Добавить новый самолёт" Background="White" />


                <!-- Editing -->

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    FontWeight="DemiBold"
                    Margin="0 0 0 5"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="ИСКЛЮЧЕНИЕ"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0 0 0 5"
                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                    Text="Выберите самолёт"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
                <ComboBox
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="15 0 15 0"
                    materialDesign:HintAssist.Hint="Борт №"
                    materialDesign:HintAssist.HintOpacity=".26"
                    IsEditable="True"
                    DisplayMemberPath="Id" />
                <Button
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="15 10 15 10"
                    Command="{Binding CheckAndSave}"
                    Content="Исключить самолёт" Background="White" BorderBrush="#FFFF4600" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>