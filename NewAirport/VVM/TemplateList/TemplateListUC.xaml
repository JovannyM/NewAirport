                                HorizontalAlignment="Center"
                                Grid.Row="3"
                                Grid.Column="1"
                                Text="Время отправления" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="3"
                                Grid.Column="2"
                                Text="{Binding DepartureTimeFromFirstCity}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Center"
                                Grid.Row="3"
                                Grid.Column="3"
                                Text="Время прибытия" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="3"
                                Grid.Column="4"
                                Text="{Binding ArrivalTimeFromFirstCity}" />

                            <!-- ОТПРАВЕЛНИЕ -->

                            <TextBlock
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Right"
                                Grid.Row="5"
                                Grid.Column="0"
                                Text="УБЫВАЮЩИЙ РЕЙС" />
                            <TextBlock
