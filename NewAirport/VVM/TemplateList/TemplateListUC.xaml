                                    HorizontalAlignment="Center"/>
                                <TextBlock
                                    Margin="10 0 0 0"
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Text="Время прибытия:"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                                <TextBlock
                                    Margin="10 0 0 0"
