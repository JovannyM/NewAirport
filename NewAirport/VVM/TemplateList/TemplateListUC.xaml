                                Text="и далее в аэропорт"/>
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Margin="20 0 0 0"
                                Grid.Row="1"
                                Grid.Column="4"
                                Text="{Binding Path=SecondAirport.Name}"/>

                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="2"
                                Grid.Column="0"
                                Text="{Binding StringFormat=День прилета {0}, Path=ArrivalFromFirstCityDayOfWeek}"/>
                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="2"
                                Grid.Column="3"
                                Text="{Binding StringFormat=День отправелния {0}, Path=ArrivalFromFirstCityDayOfWeek}"/>

                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBlock
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Text="Время отправления:"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                                <TextBlock
                                    Margin="10 0 0 0"
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Text="{Binding DepartureTimeFromFirstCity}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                                <TextBlock
                                    Margin="10 0 0 0"
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Text="Время прибытия:"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                                <TextBlock
                                    Margin="10 0 0 0"
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Text="{Binding ArrivalTimeFromFirstCity}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel
                                Grid.Row="3"
