                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="6"
                                Grid.Column="4"
                                Text="{Binding ArrivalToSecondCityDayOfWeekString}" />


                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Center"
                                Grid.Row="7"
                                Grid.Column="1"
                                Text="Время отправления" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="7"
                                Grid.Column="2"
                                Text="{Binding DepartureTimeToSecondCity}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Center"
                                Grid.Row="7"
                                Grid.Column="3"
                                Text="Время прибытия" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="7"
                                Grid.Column="4"
                                Text="{Binding ArrivalTimeToSecondCity}" />

                            <!-- Время -->

                            <TextBlock
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Right"
                                Grid.Row="9"
                                Grid.Column="0"
                                Text="ВРЕМЯ ГЕНЕРАЦИИ" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Center"
                                Grid.Row="9"
                                Grid.Column="1"
                                Text="Старт генерации" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Left"
                                Grid.Row="9"
                                Grid.Column="2"
                                Text="{Binding StartDateOfCreatingFlights}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Center"
                                Grid.Row="9"
                                Grid.Column="3"
                                Text="Окончание генерации" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Left"
                                Grid.Row="9"
                                Grid.Column="4"
                                Text="{Binding EndDateOfCreatingFlights}" />

                            <!--
                            <TextBlock
