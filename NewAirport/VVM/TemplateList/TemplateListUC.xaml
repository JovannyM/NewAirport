<UserControl x:Class="NewAirport.VVM.TemplateList.TemplateListUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NewAirport.VVM.TemplateList"
             mc:Ignorable="d"
             Name="ThisUC"
             d:DesignHeight="500" d:DesignWidth="1150"

             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="{materialDesign:MaterialDesignFont}">

    <UserControl.DataContext>
        <local:TemplateListVM />
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <ItemsControl
            Margin="10 0 10 0"
            ItemsSource="{Binding Templates}"
            ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card
                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                        Padding="5"
                        Margin="0 10 0 0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="4*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                VerticalAlignment="Top"
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                HorizontalAlignment="Right"
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="{Binding StringFormat=Шаблон №: {0}, Path=Id}" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Grid.ColumnSpan="3"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Margin="0"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                    Text="Запланирован борт № " />
                                <TextBlock
                                    FontWeight="DemiBold"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                    Text="{Binding Airplane.Name}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="3"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right">
                                <Button
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Width="150"
                                    Content="Создать рейсы"
                                    CommandParameter="{Binding Id}"
                                    Command="{Binding ElementName=ThisUC, Path=DataContext.GenerateFlights }" />
                                <Button
                                    Margin="10 0 0 0"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Width="150"
                                    Content="Удалить шаблон"
                                    CommandParameter="{Binding Id}"
                                    Command="{Binding ElementName=ThisUC, Path=DataContext.DeleteTemplate }" 
                                    Background="White" 
                                    BorderBrush="#FFFF8000" 
                                    Foreground="#FFFF8000" />

                            </StackPanel>


                            <TextBlock
                                FontWeight="Bold"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Right"
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="ПРИБЫВАЮЩИЙ РЕЙС" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Center"
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="Из аэропорта" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="1"
                                Grid.Column="2"
                                Text="{Binding Path=FirstAirport.Name}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="1"
                                Grid.Column="3"
                                Text="В аэропорт" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="1"
                                Grid.Column="4"
                                Text="{Binding ElementName=ThisUC, Path=DataContext.CurrentAirport}" />


                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Center"
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="День отправления" />
                            <TextBlock
                                FontWeight="DemiBold"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Grid.Row="2"
                                Grid.Column="2"
                                Text="{Binding DepartureFromFirstCityDayOfWeekString}" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                HorizontalAlignment="Center"
                                Grid.Row="2"
                                Grid.Column="3"
                                Text="День прибытия" />
